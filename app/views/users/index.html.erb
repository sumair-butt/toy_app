<% provide(:title, "Home Page") %>
<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="5"></th>
    </tr>
  </thead>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= button_to "Show", user_path(user.id), :method => :get %></td>
    <td><%= button_to "Edit", edit_user_path(user.id), :method => :get %></td>
    <td><%= button_to 'Destroy', user_path(user.id), method: :delete,
                                     data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br>

<%= link_to 'Add New User?', new_user_path %>